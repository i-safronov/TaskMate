<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:padding">@dimen/padding</item>
        <item name="android:minHeight">@dimen/clickable_item_min_height</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_color_in_button</item>
    </style>

</resources>