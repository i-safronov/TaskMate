<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="hint" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/hint</item>
    </style>

    <style name="text_in_button" parent="text">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_color_in_button</item>
    </style>

    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:padding">@dimen/padding</item>
        <item name="android:minHeight">@dimen/clickable_item_min_height</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_color_in_button</item>
        <item name="android:layout_margin">@dimen/margin_big</item>
    </style>

    <style name="button_without_margin" parent="Widget.AppCompat.Button">
        <item name="android:padding">@dimen/padding</item>
        <item name="android:minHeight">@dimen/clickable_item_min_height</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_color_in_button</item>
    </style>

    <style name="logo_image">
        <item name="cornerSizeBottomLeft">16%</item>
        <item name="cornerSizeBottomRight">16%</item>
    </style>

    <style name="progress_bar">
        <item name="android:indeterminateTint">@color/accent_color</item>
    </style>

    <style name="check_box" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/black</item>
    </style>

    <style name="edit_text" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:minHeight">@dimen/clickable_item_min_height</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:gravity">start</item>
    </style>
    
    <style name="bottom_sheet_style" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="bottom_sheet_dialog_theme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottom_sheet_style</item>
    </style>

    <style name="nested_scroll_bar_style">
        <item name="android:scrollbarFadeDuration">2</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fillViewport">true</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>