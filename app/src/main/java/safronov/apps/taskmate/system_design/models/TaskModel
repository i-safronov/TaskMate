domain:

sealed class Task {

    data class TaskText:
    1 - title
    2 - date
    3 - text
    4 - task category
    5 - task type
    6 - is pinned
    7 - id

    data class TaskList:
    1 - title
    2 - date
    3 - list: List<TaskListItem>
    4 - task category
    5 - task type
    6 - is pinned
    7 - id

    data class TaskListItem:
    1 - title
    2 - is checked

}